doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title PUG Loan List
header.header
    nav.nav.nav--course
        a.nav__el(href='/') All courses
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href='img/icons.svg#icon-search')

    .header__logo
        img(src='/img/logo.png' alt='Course logo')
    nav.nav.nav--user
        a.nav__el(href='/me')
            img.nav__user-img(src='/img/users/user.png' alt='user photo')
            span Loans
h3.heading-primary
  span List Of Courses
div
  table.table-header
      thead
        tr
          th(scope='ID') #
          th(scope='col') customerName
          th(scope='col') phoneNumber
          th(scope='col') address
          th(scope='col') loanAmount
          th(scope='col') interest
          th(scope='col') loanTermYears
          th(scope='col') description
      tbody
        each loans in l 
          tr.table-secondary
            td #{loans.customerName}
            td #{loans.phoneNumber}
            td #{loans.address}
            td #{loans.loanAmount}
            td #{loans.interest}
            td #{loans.loanTermYears}
            td #{loans.description}
            
